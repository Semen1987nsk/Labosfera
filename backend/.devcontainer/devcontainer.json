{
  "name": "Labosfera Backend",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/app",

  // Эта секция автоматически открывает и настраивает порты
  "forwardPorts": [8000],

  "portsAttributes": {
    "8000": {
      "label": "Backend (Django API)",
      "onAutoForward": "openPreview",
      // САМОЕ ВАЖНОЕ: делаем порт публичным по умолчанию
      "visibility": "public"
    }
  }
}